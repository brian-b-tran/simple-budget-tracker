{
  "compilerOptions": {
    "target": "ES2022",                  // Modern JS features
    "module": "CommonJS",                // Node.js modules
    "outDir": "dist",                     // Compiled JS goes here
    "rootDir": "src",                     // Source files
    "strict": true,                       // Enable all strict checks
    "esModuleInterop": true,              // Allow import express from 'express'
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                 // Skip type checking node_modules
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true                      // Useful for debugging
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
}